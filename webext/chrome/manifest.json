{
  "manifest_version": 3,
  "name": "Cerberus Password Manager",
  "version": "0.1.0",
  "description": "Auto-fill and manage passwords with Cerberus.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Cerberus",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
